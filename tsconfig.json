{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    /* Interop Constraints */
    "moduleResolution": "bundler",
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    /* Type Checking - Graduale */
    /* Type Checking - Graduale */
    "strict": true,
    "noImplicitAny": true, // Explicitly set for clarity, though implied
    "strictNullChecks": true,
    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": ".",
    "removeComments": false,
    "noEmit": false,
    "skipLibCheck": true
  },
  "include": [
    "js/utils/*.ts",
    "js/data/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}